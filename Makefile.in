prefix		= @prefix@
exec_prefix 	= @exec_prefix@
# abs_top_builddir is by default the absolute path of the builddir.
includedir	= @includedir@
datadir 	= @datarootdir@
localstatedir	= @localstatedir@
sysconfdir	= @sysconfdir@

VPATH       	= @srcdir@
srcdir  	= @srcdir@
libdir		= @libdir@
top_srcdir  	= @top_srcdir@
CC		= @CC@
CFLAGS  	= @CFLAGS@ 
LDFLAGS 	= @LDFLAGS@
LIBS    	= @LIBS@
INSTALL		= @INSTALL@

INCLUDES 	= -I. -I@srcdir@ @INCLUDES@
SHELL		= /bin/sh

SUBDIRS  = src
SUBDIRS += yang
SUBDIRS += util
#SUBDIRS += plugins
#SUBDIRS += docker

.PHONY:	all clean $(SUBDIRS) test install uninstall docker push TAGS .config.status doc

all:	$(SUBDIRS)

$(SUBDIRS): 
	(cd $@ && $(MAKE) $(MFLAGS) all || exit 1)

install:  
	for i in $(SUBDIRS) doc ; \
	do (cd $$i; $(MAKE) $(MFLAGS) $@)||exit 1; done; 

uninstall:
	for i in $(SUBDIRS) doc; \
	do (cd $$i && $(MAKE) $(MFLAGS) $@)||exit 1; done;

docker:
	(cd docker; $(MAKE) $(MFLAGS) $@)
	echo "make push to push images to dockerhub"

extensions:
	(cd extensions; $(MAKE) $(MFLAGS) $@)

doc:
	cd $@; $(MAKE) $(MFLAGS) $@

test:
	$(MAKE) -C docker $(MFLAGS) $@

push:
	(cd docker; $(MAKE) $(MFLAGS) $@)

config.status:	configure
	$(SHELL) config.status --recheck

configure:	configure.ac
	cd $(srcdir) && autoconf

clean:
	for i in $(SUBDIRS) doc docker; \
	do (cd $$i && $(MAKE) $(MFLAGS) $@); done; 
	rm -f *.gcov *.gcno # coverage

distclean:
	rm -f Makefile TAGS config.status config.log *~
	rm -rf autom4te.cache
	for i in $(SUBDIRS) doc util docker; \
	do (cd $$i && $(MAKE) $(MFLAGS) $@); done

systemd:
	${INSTALL} clixon-controller.service /usr/lib/systemd/system/
	@echo "systemd service installed, run systemctl enable clixon-controller.service to enable it"

TAGS:
	find $(srcdir) -not \( -type d \( -path './.git' -o -path './docker' -o -path './doc' \) -prune \) -name '*.[ch]' -type f | grep -v \.tab\.[ch] | grep -v lex.*.c | grep -v .yy.c | xargs etags
