VPATH       	= @srcdir@
srcdir  	= @srcdir@
top_srcdir  	= @top_srcdir@

SUBDIRS  = junos-native cli-command

.PHONY: all clean depend install $(SUBDIRS)

all:	$(SUBDIRS)

depend:
	for i in $(SUBDIRS); \
	do (cd $$i; $(MAKE) $(MFLAGS) $@); done

$(SUBDIRS):
	(cd $@; $(MAKE) $(MFLAGS) all)

install:
	for i in $(SUBDIRS); \
	do (cd $$i && $(MAKE) $(MFLAGS) $@)||exit 1; done

uninstall:
	for i in $(SUBDIRS); \
	do (cd $$i; $(MAKE) $(MFLAGS) $@)||exit 1; done

clean:
	for i in $(SUBDIRS); \
	do (cd $$i; $(MAKE) $(MFLAGS) $@); done

distclean: clean
	rm -f Makefile *~ .depend
	for i in $(SUBDIRS); \
	do (cd $$i; $(MAKE) $(MFLAGS) $@); done
