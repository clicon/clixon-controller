VPATH       	= @srcdir@
srcdir  	= @srcdir@
top_srcdir  	= @top_srcdir@
prefix 		= @prefix@
bindir 		= @bindir@
includedir	= @includedir@
datarootdir     = @datarootdir@
sysconfdir      = @sysconfdir@
localstatedir   = @localstatedir@
libdir          = @exec_prefix@/lib

INSTALLFLAGS  	= @INSTALLFLAGS@ 

# Here is where example yang appears
YANG_INSTALLDIR0  = @YANG_INSTALLDIR@
YANG_INSTALLDIR  = @YANG_INSTALLDIR@/controller
# Here is where example yang appears
YANG_MOUNTDIR  = @YANG_INSTALLDIR@/controller/mounts

# Local yang files to install
# IETF
YANGSPECS  = clixon-controller@2023-11-01.yang # 0.2.0

# Extends config (not data)
YANGSPECS0  = clixon-controller-config@2023-11-01.yang # 0.2.0

.PHONY: all clean distclean install uninstall depend

all:

clean:

distclean: clean
	rm -f Makefile *~ .depend

install: $(YANGSPECS) $(YANGSPECS0)
	install -d -m 0755 $(DESTDIR)$(YANG_INSTALLDIR)
	install -m 0644 $(YANGSPECS) $(DESTDIR)$(YANG_INSTALLDIR)
	install -d -m 0755 $(DESTDIR)$(YANG_INSTALLDIR0)
	install -m 0644 $(YANGSPECS0) $(DESTDIR)$(YANG_INSTALLDIR0)
	install -d -m 0755 $(DESTDIR)$(YANG_MOUNTDIR)

uninstall: 
	for i in $(YANGSPEC) ; \
	do rm $(DESTDIR)$(YANG_INSTALLDIR)/$$i; done

depend:
	$(CC) $(DEPENDFLAGS) $(INCLUDES) $(CFLAGS) -MM $(SRC) > .depend

#include .depend

